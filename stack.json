{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "CFN stack for the backend of my resume. Takes care of all resources for the visitor count on the website",
    "Transform": "AWS::Serverless-2016-10-31",
    "Parameters": {
        "ApplicationName": {
            "Description": "Name of the application, will be used for tags and naming resources",
            "Type": "String",
            "Default": "Resumebackend"
        }
    },
    "Resources": {
        "dynamodbTable": {
            "Type": "AWS::Serverless::SimpleTable",
            "Properties": {
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "ApplicationName"
                            },
                            "Table"
                        ]
                    ]
                },
                "Tags": {
                    "Key": "Name",
                    "Value": {
                        "Ref": "ApplicationName"
                    }
                }
            }
        },
        "lambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "CodeUri": "code/",
                "Handler": "app.lambda_handler",
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaRole",
                        "Arn"
                    ]
                },
                "Runtime": "python3.8",
                "FunctionName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "ApplicationName"
                            },
                            "Lambda"
                        ]
                    ]
                },
                "MemorySize": 128,
                "Timeout": 5,
                "Environment": {
                    "Variables" : {
                        "tablename" : {
                        { "Ref": "dynamodbTable" }
                        }
                    }
                },
                "Events": {
                    "VisitorCount": {
                        "Type": "Api",
                        "Properties": {
                            "Path": "/count",
                            "Method": "post"
                        }
                    }
                }
            }
        },
        "LambdaRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "ManagedPolicyArns": "AWSLambdaBasicExecutionRole",
                "Policies": [
                    {
                        "PolicyName": "DynamoDB-ReadWrite",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "dynamodb:GetItem",
                                        "dynamodb:UpdateItem"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "dynamodbTable",
                                            "Arn"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "VisitorCountAPI": {
            "Value": {
                "Fn::Sub": "https://${ServerlessRestApi}.execute-api.${AWS::Region}.amazonaws.com/Prod/count/"
            }
        }
    }
}